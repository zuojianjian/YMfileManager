<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="本机存储"
            android:textColor="@drawable/textcolor_volume_selector"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:background="#E6E6E6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_android_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sd_page_bg_selector"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/iv_android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@mipmap/storage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_android"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_system_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="安卓系统"
                    android:textColor="@drawable/textcolor_selector"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/pb_system"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/my_progressbar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_system_total_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大小："
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_system_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_system_avail_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"
                        android:text="可用："
                        android:ellipsize="end"
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_system_avail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <RelativeLayout
            android:id="@+id/rl_sd_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sd_page_bg_selector"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/iv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@mipmap/storage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_person"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sd_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@drawable/textcolor_selector"
                    android:text="磁盘存储"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/pb_sd"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/my_progressbar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sd_total_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大小："
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_sd_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_sd_avail_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="可用："
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_sd_avail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="移动设备"
            android:textColor="@drawable/textcolor_volume_selector"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:background="#E6E6E6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_mount_space_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sd_page_bg_selector"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_dvd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@mipmap/storage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_dvd"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_usb_title_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@drawable/textcolor_selector"
                    android:text="可移动磁盘"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/pb_usb"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="180dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:progressDrawable="@drawable/my_progressbar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_usb_total_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大小："
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_usb_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_usb_avail_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="可用："
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_usb_avail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <RelativeLayout
            android:id="@+id/rl_mount_space_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:background="@drawable/sd_page_bg_selector"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:visibility="gone"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/iv_mount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@mipmap/storage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_mount"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_usb_title_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@drawable/textcolor_selector"
                    android:text="可移动磁盘"
                    android:textSize="16sp" />

                <ProgressBar
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="180dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/my_progressbar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大小："
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="可用："
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/textcolor_volume_selector"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="云服务"
            android:textColor="@drawable/textcolor_volume_selector"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:background="#E6E6E6" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginLeft="80dp">

        <RelativeLayout
            android:id="@+id/rl_android_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sd_page_bg_selector"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="50dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/iv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@mipmap/storage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_service"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_service_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@drawable/textcolor_selector"
                    android:text="云盘"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/pb_service"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="180dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/my_progressbar" />

                <TextView
                    android:id="@+id/tv_service_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备存储：1.22G"
                    android:textColor="@drawable/textcolor_volume_selector"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


