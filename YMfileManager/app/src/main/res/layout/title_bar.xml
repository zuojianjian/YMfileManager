<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_bg_selector"
            android:src="@mipmap/iv_back"
            android:paddingTop="8dp"
            android:paddingBottom="9dp"
            android:layout_weight="0.5"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E6E6E6"/>

        <ImageView
            android:id="@+id/iv_fresh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/fresh_selector"
            android:layout_weight="0.5"/>
        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/setting_selector"
            android:layout_weight="0.3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="12"/>


        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="2dp"
            android:layout_weight="1">

            <SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="请输入搜索内容"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:iconifiedByDefault="true"
                android:textSize="10sp"
                android:gravity="center"
                android:background="@mipmap/search_edit"/>

        </FrameLayout>

        <ImageView
            android:id="@+id/iv_switch_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/white"
            android:src="@drawable/view_switch_selector"
            android:layout_weight="0.3"/>

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@mipmap/menu"
            android:layout_weight="0.8"/>

    </LinearLayout>

</RelativeLayout>


