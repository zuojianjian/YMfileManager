<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@drawable/dialog_bg_shape"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/dialog_type_text"
        android:layout_marginLeft="10dp"
        style="@style/textDialog"
        android:text="@string/dialog_type_text"/>
    <TextView
        android:id="@+id/dialog_type_audio"
        android:layout_marginLeft="10dp"
        style="@style/textDialog"
        android:layout_marginTop="15dp"
        android:text="@string/dialog_type_audio"/>
    <TextView
        android:id="@+id/dialog_type_video"
        android:layout_marginLeft="10dp"
        style="@style/textDialog"
        android:layout_marginTop="15dp"
        android:text="@string/dialog_type_video"/>
    <TextView
        android:id="@+id/dialog_type_image"
        android:layout_marginLeft="10dp"
        style="@style/textDialog"
        android:layout_marginTop="15dp"
        android:text="@string/dialog_type_image"/>

</LinearLayout>