<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg_shape">

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/pop_menu_refresh"
            style="@style/wrap"
            android:text="刷新" />
        <TextView
            android:id="@+id/pop_menu_cancel_all"
            style="@style/wrap"
            android:text="全选(取消)" />
        <TextView
            android:id="@+id/pop_menu_copy"
            style="@style/wrap"
            android:text="复制" />
        <TextView
            android:id="@+id/pop_menu_delete"
            style="@style/wrap"
            android:text="删除" />
        <TextView
            android:id="@+id/pop_menu_send"
            style="@style/wrap"
            android:text="发送" />
        <TextView
            android:id="@+id/pop_menu_create"
            style="@style/wrap"
            android:text="新建文件夹" />
        <TextView
            android:id="@+id/pop_menu_exit"
            style="@style/wrap"
            android:text="退出" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/pop_setting_relative"
            style="@style/wrap"
            android:text="关于" />
        <TextView
            android:id="@+id/pop_setting_exit"
            style="@style/wrap"
            android:text="退出" />
        <TextView
            android:id="@+id/pop_setting_help"
            style="@style/wrap"
            android:text="帮助和反馈"
            />
        <TextView
            android:id="@+id/pop_setting_view"
            style="@style/wrap"
            android:text="显示隐藏文件" />
    </LinearLayout>


</FrameLayout>